<div class="tab-buttons middle center">
    <button type="action" name="act_character" >Character</button>
    <button type="action" name="act_background" >Background</button>
    <button type="action" name="act_settings" >Settings</button>
</div>


<input type="hidden" class="tabstoggle" name="data.sheetTab" value="character">

<!--  --------------------------------------------------------------------------------- -->
<!--  --------------------------- PAGE 1 ---------------------------------------------- -->
<!--  --------------------------------------------------------------------------------- -->
<main class="character tab-content tab1 page1">

<!-- NAME SECTION -->
  <section class="name columnflex nowrap">

    <div class="rowflex nowrap spaced">

      <div class="columnflex nowrap">
        <label style="width:100px;">Character name:</label>
        <input name="name" type="text" value="{{actor.name}}">
      </div>
      <div class="columnflex nowrap">
        <label style="width:80px;">Player name</label>
        <input name="data.playername" type="text" value="{{data.playername}}">
      </div>
      <div class="columnflex nowrap">
        <label>Campaign</label>
        <input name="data.campaign" type="text" value="{{data.campaign}}">
      </div>

    </div>

    <div class="rowflex nowrap spaced">

      <div class="columnflex nowrap">
        <label>Race</label>
        <input name="data.race" list="race" placeholder="race" type="text" value="{{data.race}}">
      </div>
      <div class="columnflex nowrap">
        <label>Origin</label>
        <input name="data.origin" list="origin" placeholder="origin" type="text" value="{{data.origin}}">
      </div>
      <div class="columnflex nowrap">
        <label>Class</label>
        <input name="data.class" list="rpgclass" placeholder="class" type="text" value="{{data.class}}">
      </div>
      <div class="columnflex nowrap">
        <label class="w40" title="@{rank}">Level</label>
        <input name="data.rank" title="@{rank}" type="number" placeholder="1" class="w40" value="{{data.rank}}">
      </div>
      <div class="columnflex nowrap">
        <label class="w40" title="Hit Dice">HD</label>
        <input name="data.hd" type="text" placeholder="d8" title="Hit Dice: @{hd}" class="w40" value="{{data.hd}}">
      </div>
      <div class="columnflex nowrap">
        <label class="w30">MP</label>
        <input name="data.mp" type="number" placeholder="" title="Mission Points" class="w40" value="{{data.mp}}">
      </div>
      <div class="columnflex nowrap">
        <label class="w70">Tension Die</label>
        <select name="data.tension_die" value="{{data.tension_die}}">
          <option >d4</option>
          <option >d6</option>
          <option >d8</option>
          <option >d10</option>
          <option >d12</option>
        </select>
      </div>
    </div>

  </section>


<!-- ATTRIBUTES SECTION -->

  <div class="attr columnflex nowrap spaced center">
    {{#each data.attributes as |attr_val a|}}
      <div class="stat columnflex nowrap center middle">
        <button type="roll" class="txt-btn large" data-bonus="attributeMods.{{a}}">{{a}}</button>
        <input name="data.attributes.{{a}}" type="number" value="{{attr_val}}">
        <span class="mod">{{lookup ../attributeMods a}}</span>
      </div>
    {{/each}}
  </div>


<!-- Skills (20)-->

  <section class="skills columnflex nowrap spaced">
    <h3>Skills</h3>

    {{#each data.skills as |skill s|}}
      <div class="rowflex nowrap">
        <input name="data.skills.{{s}}.proficient" type="checkbox" {{checked skill.proficient}}>
        <input name="data.skills.{{s}}.value" type="number" class="w30" value="{{skill.value}}">
        <button type="roll" class="txt-btn" data-bonus="data.skills.{{s}}.value">{{s}}</button>
        <span>({{skill.mod}})</span>
      </div>
    {{/each}}

  </section>


<!-- hp -->

  <section class="hp rowflex nowrap">
    <div class="section columnflex nowrap middle center">
      <label class="txtcenter" title="Hit Points">HP</label>
      <div class="rowflex nowrap">
        <input name="data.health.value" type="number" value="{{data.health.value}}" placeholder="20" class="stat w40" data-dtype="Number" value="{{data.health}}">
        <span class="slash">/</span>
        <input name="data.health.max" type="number" value="{{data.health.max}}" placeholder="20" class="stat w40" data-dtype="Number" value="{{data.health}}">
      </div>

    </div>
    <div class="section columnflex nowrap middle center determ">
      <label class="txtcenter" title="Temporary Hit Points">Temp HP</label>
      <div class="rowflex nowrap">
        <input name="data.hp_temp" type="number"  title="@{hp_temp}" class="stat w40" value="{{data.hp_temp}}">
        <span class="slash">/</span>
        <input name="data.hp_temp_max" type="number"  title="@{hp_temp|max}" class="stat w40" value="{{data.hp_temp_max}}">
      </div>
    </div>
  </section>


<!-- condition -->

  <section class="condition columnflex nowrap spaced">
    <h3 class="txtcenter" title="@{condition}" >CONDITION</h3>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  checked="true" value="{{data.condition}}">
      <span>Normal</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>Disadv ability checks</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>speed halved</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>disadv attacks, saves</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>HP max halved</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>speed zero</span>
    </div>
    <div class="rowflex nowrap">
      <input name="data.condition" type="radio"  value="{{data.condition}}">
      <span>death</span>
    </div>
  </section>


<!-- prof -->

  <div class="prof rowflex nowrap">
    <div class="section columnflex nowrap middle center">
      <label class="wide" title="Proficiency Bonus">Prof Bonus</label>
      <input name="data.prof" type="number"  class="stat w40" title="Proficiency Bonus: @{prof}" value="{{data.prof}}">
    </div>
    <div class="section columnflex nowrap middle center init">
      <button name="roll_init" type="roll" title="%{init}" class="txt-btn">Initiative</button>
      <input name="data.init" type="number" title="@{init}" class="stat w40" value="{{data.init}}">
    </div>
    <div class="section columnflex nowrap middle center moxie">
      <button name="roll_moxie" type="roll" class="txt-btn" title="Social Initiative: %{moxie}" >Moxie</button>
      <input name="data.moxie" type="number" class="stat w40" title="Social Initiative: @{moxie}" value="{{data.moxie}}">
    </div>
  </div>


<!-- ac -->

  <div class="ac rowflex nowrap">
    <div class="section columnflex nowrap middle center">
      <label class="wide">Armor Class</label>
      <input name="data.ac" type="number" class="stat w70" value="{{data.ac}}">
    </div>
    <div class="section columnflex nowrap middle center">
      <label class="wide">determination</label>
      <div class="rowflex nowrap">
        <input name="data.determination" type="number" title="@{determination}" class="stat w40" value="{{data.determination}}">
        <span class="slash">/</span>
        <input name="data.determination_max" type="number" title="@{determination|max}" class="stat w40" value="{{data.determination_max}}">
      </div>
    </div>
  </div>


<!-- speed -->

  <div class="speed rowflex nowrap">
    <div class="section columnflex nowrap middle center">
      <label class="bold txtcenter">Speed</label>
      <input name="data.speed" type="text" class="w70 stat" value="{{data.speed}}">
    </div>
    <div class="section death columnflex nowrap middle center">
      <button name="roll_deathsave" type="roll" title="%{deathsave}" class="txt-btn large">Death Save</button>
      <div class="rowflex nowrap">
        <input name="data.death_success1" type="checkbox" value="{{data.death_success1}}">
        <input name="data.death_success2" type="checkbox" value="{{data.death_success2}}">
        <input name="data.death_success3" type="checkbox" value="{{data.death_success3}}">
        <span>Sucesses</span>
      </div>
      <div class="rowflex nowrap">
        <input name="data.death_failure1" type="checkbox"  value="{{data.death_failure1}}">
        <input name="data.death_failure2" type="checkbox"  value="{{data.death_failure2}}">
        <input name="data.death_failure3" type="checkbox"  value="{{data.death_failure3}}">
        <span>Failures</span>
      </div>
    </div>
  </div>


<!-- saves -->

  <section class="saves columnflex nowrap">
    <h3>Saves</h3>
    <div class="rowflex nowrap">
      <input name="data.str_save_c" type="checkbox"  value="{{data.str_save_c}}">
      <input name="data.str_save" title="@{str_save}" type="number"  title="@{str_save}" class="w30" value="{{data.str_save}}">
      <button name="roll_str_save" title="%{str_save}" type="roll" class="txt-btn"  title="%{str_save}">Strength</button>
    </div>
    <div class="rowflex nowrap">
      <input name="data.dex_save_c" type="checkbox"  value="{{data.dex_save_c}}">
      <input name="data.dex_save" type="number"  title="@{dex_save}" class="w30" value="{{data.dex_save}}">
      <button name="roll_dex_save" type="roll" class="txt-btn" >Dexterity</button>
    </div>
    <div class="rowflex nowrap">
      <input name="data.con_save_c" type="checkbox"  value="{{data.con_save_c}}">
      <input name="data.con_save" type="number"  class="w30" value="{{data.con_save}}">
      <button name="roll_con_save" type="roll" class="txt-btn" >Constitution</button>
    </div>
    <div class="rowflex nowrap">
      <input name="data.int_save_c" type="checkbox"  value="{{data.int_save_c}}">
      <input name="data.int_save" type="number"  class="w30" value="{{data.int_save}}">
      <button name="roll_int_save" type="roll" class="txt-btn" >Intelligence</button>
    </div>
    <div class="rowflex nowrap">
      <input name="data.wis_save_c" type="checkbox"  value="{{data.wis_save_c}}">
      <input name="data.wis_save" type="number"  class="w30" value="{{data.wis_save}}">
      <button name="roll_wis_save" type="roll" class="txt-btn" >Wisdom</button>
    </div>
    <div class="rowflex nowrap mb20">
      <input name="data.cha_save_c" type="checkbox"  value="{{data.cha_save_c}}">
      <input name="data.cha_save" type="number"  class="w30" value="{{data.cha_save}}">
      <button name="roll_cha_save" type="roll" class="txt-btn" >Charisma</button>
    </div>
  </section>


<!-- bulk -->

  <section class="bulk columnflex nowrap middle center">
      <h3>Tactical Vest Bulk</h3>
      <input name="data.bulk" type="number"  class="stat w40" value="{{data.bulk}}">
  </section>

<!-- ammo -->



<!-- inventory mini -->

  <section class="inventory columnflex nowrap center">
    <h4>Inventory</h4>
    <textarea name="data.inventory" title="@{inventory}"></textarea>
  </section>

