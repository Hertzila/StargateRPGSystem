<form class="{{cssClass}} charsheet" autocomplete="off">
  <header class="sheet-header">
    <span class="version bold">Sheet Version: 1.70</span>
  </header>
<!--
<input type="radio" name="data.tab" class="tab tab1"  checked="checked"><span title="Main"></span>
<input type="radio" name="data.tab" class="tab tab2"  style="top: -56px;left: 235px;" ><span title="Background"></span>
<input type="radio" name="data.tab" class="tab tab3"  style="top: -88px;left: 392px;" ><span title="Settings"></span>
