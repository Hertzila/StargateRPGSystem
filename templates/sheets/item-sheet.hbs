<form class="{{cssClass}} flexcol itemsheet" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        {{!-- Header stuff goes here --}}
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="100" width="100"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            {{#if isWeapon}}
            <div class="resources grid grid-2col">
                <div class="resource flex-group-center">
                    <label for="data.dmg" class="resource-label">Damage</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.dmg" value="{{data.dmg}}" data-dtype="String"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.toHit" class="resource-label">To hit</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.toHit" value="{{data.toHit}}" data-dtype="String"/>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">Description</a>
        <a class="item" data-tab="details">Details</a>
    </nav>

    <section class="sheet-body flexrow">
        <div class="tab flexrow description" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable rollData=rollData}}
        </div>
        <div class="tab flexrow details" data-tab="details">
            {{#if isWeapon}}
                {{> "systems/sgrpg/templates/sheets/parts/weapon-details.hbs"}}
            {{else}}
                {{> "systems/sgrpg/templates/sheets/parts/equip-details.hbs"}}
            {{/if}}
        </div>
    </section>
</form>