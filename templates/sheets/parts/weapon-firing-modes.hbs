<div class="grid grid-2col">
    <div class="flexcol details-column">
        {{!-- Attack details left column --}}
        <h2 class="details-entry">Burst Fire</h2>
        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.burstAttack.able">Can burst</label>
            <input type="checkbox" name="data.burstAttack.able" {{checked data.burstAttack.able}} data-dtype="Boolean" />
        </div>
        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.burstAttack.ammoCost">Ammo Cost</label>
            <input type="number" name="data.burstAttack.ammoCost" value="{{data.burstAttack.ammoCost}}" data-dtype="Number" />
        </div>

        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.burstAttack.atkSnd" title="Leave empty for the default">Attack sound</label>
            <div class="form-fields nowrap">
                <button type="button" class="file-picker" data-type="audio" data-target="data.burstAttack.atkSnd">Pick</button>
                <input type="text" name="data.burstAttack.atkSnd" value="{{data.burstAttack.atkSnd}}" data-dtype="String" />
            </div>
        </div>

        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.burstAttack.dmgSnd" title="Leave empty for the default">Damage sound</label>
            <div class="form-fields nowrap">
                <button type="button" class="file-picker" data-type="audio" data-target="data.burstAttack.dmgSnd">Pick</button>
                <input type="text" name="data.burstAttack.dmgSnd" value="{{data.burstAttack.dmgSnd}}" data-dtype="String" />
            </div>
        </div>

        <div class="flex1"></div>
    </div>

    <div class="flexcol details-column">
        {{!-- Attack details right column --}}
        <h2 class="details-entry">Full Auto Fire</h2>
        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.autoAttack.able">Can full auto</label>
            <input type="checkbox" name="data.autoAttack.able" {{checked data.autoAttack.able}} data-dtype="Boolean" />
        </div>
        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.autoAttack.ammoCost">Ammo Cost</label>
            <input type="number" name="data.autoAttack.ammoCost" value="{{data.autoAttack.ammoCost}}" data-dtype="Number" />
        </div>
        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.autoAttack.stabilized">Compensated</label>
            <input type="checkbox" name="data.autoAttack.stabilized" {{checked data.autoAttack.stabilized}} data-dtype="Boolean" />
        </div>
        {{#if homebrewSettings.allowWeaponTensionOnAttack}}
        <div class="details-entry grid grid-2col" title="If enabled, the chat card will keep the balance between attack and damage tension dice equal to max fire">
            <label class="attribute-label" for="data.autoAttack.autoBalanceFullAuto">Automatically balance in chat</label>
            <input type="checkbox" name="data.autoAttack.autoBalanceFullAuto" {{checked data.autoAttack.autoBalanceFullAuto}} data-dtype="Boolean" />
        </div>
        {{/if}}

        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.autoAttack.atkSnd" title="Leave empty for the default">Attack sound</label>
            <div class="form-fields nowrap">
                <button type="button" class="file-picker" data-type="audio" data-target="data.autoAttack.atkSnd">Pick</button>
                <input type="text" name="data.autoAttack.atkSnd" value="{{data.autoAttack.atkSnd}}" data-dtype="String" />
            </div>
        </div>

        <div class="details-entry grid grid-2col">
            <label class="attribute-label" for="data.autoAttack.dmgSnd" title="Leave empty for the default">Damage sound</label>
            <div class="form-fields nowrap">
                <button type="button" class="file-picker" data-type="audio" data-target="data.autoAttack.dmgSnd">Pick</button>
                <input type="text" name="data.autoAttack.dmgSnd" value="{{data.autoAttack.dmgSnd}}" data-dtype="String" />
            </div>
        </div>
    </div>
</div>